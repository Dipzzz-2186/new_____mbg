//- src/views/dapur/profile.pug
extends ../layout

block content
  .container.py-4
    .d-flex.justify-content-between.align-items-center.mb-4
      h3.mb-0 Profil Dapur
      a.btn.btn-outline-secondary(href="/dapur/dashboard")
        i.bi.bi-arrow-left.me-1
        | Kembali ke Dashboard

    .card.border-0.shadow-sm
      .card-body.p-4
        h4.mb-3= user.name
        .badge.bg-success.bg-opacity-10.text-success.mb-3
          i.bi.bi-shield-check.me-1
          = user.role

        dl.row.mb-0
          dt.col-sm-3 Email
          dd.col-sm-9= user.email || 'Belum diatur'

          dt.col-sm-3 Telepon
          dd.col-sm-9= user.phone || 'Belum diatur'

          dt.col-sm-3 Alamat
          dd.col-sm-9= user.address || 'Belum diatur'

        .mt-4
          a.btn.btn-primary(href="/dapur/profile/complete")
            i.bi.bi-pencil-square.me-1
            | Lengkapi / Ubah Data
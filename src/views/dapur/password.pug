extends ../layout

block content
  .container.mt-4
    .row.justify-content-center
      .col-md-6
        h3.mb-4.text-center Ganti Password

        if messages && messages.error && messages.error.length
          each err in messages.error
            .alert.alert-danger.mb-2= err

        if (query && query.success) || (messages && messages.success && messages.success.length)
          each ok in (messages.success || ['Password berhasil diperbarui!'])
            .alert.alert-success.mb-2= ok

        form(method="POST" action="/dapur/profile/password")
          .mb-3
            label.form-label(for="current_password") Password Lama
            input.form-control(
              type="password"
              id="current_password"
              name="current_password"
              required
            )

          .mb-3
            label.form-label(for="new_password") Password Baru
            input.form-control(
              type="password"
              id="new_password"
              name="new_password"
              required
            )

          .mb-3
            label.form-label(for="confirm_password") Konfirmasi Password Baru
            input.form-control(
              type="password"
              id="confirm_password"
              name="confirm_password"
              required
            )

          button.btn.btn-primary.w-100(type="submit")
            i.bi.bi-check-circle.me-2
            | Simpan Password Baru

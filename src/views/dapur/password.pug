extends ../layout

block content
  style.
    .password-change-container {
      min-height: 100vh;
      background: linear-gradient(135deg, #f0f9f4 0%, #e8f5e9 100%);
      padding: 60px 20px;
    }
    .password-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 40px rgba(46, 125, 50, 0.1);
      padding: 48px;
      max-width: 520px;
      margin: 0 auto;
      border: 1px solid rgba(46, 125, 50, 0.1);
    }
    .password-header {
      text-align: center;
      margin-bottom: 40px;
    }
    .password-icon {
      width: 70px;
      height: 70px;
      background: linear-gradient(135deg, #2e7d32 0%, #4caf50 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 24px;
      box-shadow: 0 8px 20px rgba(46, 125, 50, 0.25);
    }
    .password-icon i {
      font-size: 32px;
      color: white;
    }
    .password-title {
      color: #1b5e20;
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 8px;
    }
    .password-subtitle {
      color: #66bb6a;
      font-size: 15px;
      font-weight: 400;
    }
    .form-group-custom {
      margin-bottom: 24px;
      position: relative;
    }
    .form-label-custom {
      display: block;
      color: #2e7d32;
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 8px;
      letter-spacing: 0.3px;
    }
    .form-control-custom {
      width: 100%;
      padding: 14px 16px 14px 48px;
      border: 2px solid #e8f5e9;
      border-radius: 10px;
      font-size: 15px;
      transition: all 0.3s ease;
      background: #fafafa;
      color: #1b5e20;
    }
    .form-control-custom:focus {
      outline: none;
      border-color: #4caf50;
      background: white;
      box-shadow: 0 0 0 4px rgba(76, 175, 80, 0.1);
    }
    .input-icon {
      position: absolute;
      left: 16px;
      top: 43px;
      color: #66bb6a;
      font-size: 18px;
    }
    .btn-submit {
      width: 100%;
      padding: 16px;
      background: linear-gradient(135deg, #2e7d32 0%, #4caf50 100%);
      border: none;
      border-radius: 10px;
      color: white;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 12px;
      box-shadow: 0 4px 15px rgba(46, 125, 50, 0.3);
    }
    .btn-submit:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 25px rgba(46, 125, 50, 0.4);
    }
    .btn-submit:active {
      transform: translateY(0);
    }
    .alert-custom {
      padding: 16px 20px;
      border-radius: 10px;
      margin-bottom: 24px;
      font-size: 14px;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 12px;
    }
    .alert-error {
      background: #ffebee;
      border: 1px solid #ef5350;
      color: #c62828;
    }
    .alert-success {
      background: #e8f5e9;
      border: 1px solid #66bb6a;
      color: #2e7d32;
    }
    .alert-custom i {
      font-size: 20px;
    }
    .password-requirements {
      background: #f1f8f4;
      border-left: 4px solid #4caf50;
      padding: 16px;
      border-radius: 8px;
      margin-bottom: 24px;
      font-size: 13px;
      color: #2e7d32;
    }
    .password-requirements ul {
      margin: 8px 0 0 0;
      padding-left: 20px;
    }
    .password-requirements li {
      margin-bottom: 4px;
    }

  .password-change-container
    .password-card
      .password-header
        .password-icon
          i.bi.bi-shield-lock-fill
        h3.password-title Ganti Password
        p.password-subtitle Perbarui password Anda untuk keamanan akun

      if messages && messages.error && messages.error.length
        each err in messages.error
          .alert-custom.alert-error
            i.bi.bi-exclamation-triangle-fill
            span= err

      if (query && query.success) || (messages && messages.success && messages.success.length)
        each ok in (messages.success || ['Password berhasil diperbarui!'])
          .alert-custom.alert-success
            i.bi.bi-check-circle-fill
            span= ok

      .password-requirements
        strong
          i.bi.bi-info-circle.me-2
          | Persyaratan Password:
        ul
          li Minimal 6 karakter
          li Kombinasi huruf besar dan kecil
          li Minimal 1 angka

      form(method="POST" action="/dapur/profile/password")
        .form-group-custom
          label.form-label-custom(for="current_password") Password Lama
          i.bi.bi-key-fill.input-icon
          input.form-control-custom(
            type="password"
            id="current_password"
            name="current_password"
            placeholder="Masukkan password lama Anda"
            required
          )

        .form-group-custom
          label.form-label-custom(for="new_password") Password Baru
          i.bi.bi-lock-fill.input-icon
          input.form-control-custom(
            type="password"
            id="new_password"
            name="new_password"
            placeholder="Masukkan password baru"
            required
          )

        .form-group-custom
          label.form-label-custom(for="confirm_password") Konfirmasi Password Baru
          i.bi.bi-check2-square.input-icon
          input.form-control-custom(
            type="password"
            id="confirm_password"
            name="confirm_password"
            placeholder="Konfirmasi password baru"
            required
          )

        button.btn-submit(type="submit")
          i.bi.bi-check-circle.me-2
          | Simpan Password Baru
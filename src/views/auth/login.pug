doctype html
html(lang='id')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Login - MBG Marketplace
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css')
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      @keyframes float {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-15px) rotate(3deg); }
      }
      
      @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-10px); }
        75% { transform: translateX(10px); }
      }
      
      @keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
      }
      
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        background: #f5f5f5;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        position: relative;
        overflow: hidden;
      }
      
      /* Background Decorations - Soft Shapes */
      .bg-shape {
        position: absolute;
        z-index: 0;
        opacity: 0.6;
      }
      
      .bg-shape-1 {
        top: -10%;
        left: -5%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(40, 167, 69, 0.15) 0%, transparent 70%);
        border-radius: 50%;
      }
      
      .bg-shape-2 {
        bottom: -10%;
        right: -5%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(33, 136, 56, 0.12) 0%, transparent 70%);
        border-radius: 50%;
      }
      
      .bg-shape-3 {
        top: 30%;
        right: 5%;
        width: 200px;
        height: 200px;
        background: radial-gradient(circle, rgba(40, 167, 69, 0.08) 0%, transparent 70%);
        border-radius: 50%;
      }
      
      /* Logo */
      .logo-container {
        text-align: center;
        margin-bottom: 3rem;
        position: relative;
        z-index: 1;
        animation: fadeInUp 0.6s ease-out;
      }
      
      .logo-text {
        font-size: 2.5rem;
        font-weight: 700;
        color: #28a745;
        letter-spacing: -1px;
      }
      
      .logo-text span {
        color: #218838;
      }
      
      .login-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        max-width: 1100px;
        width: 100%;
        gap: 3rem;
        align-items: center;
        position: relative;
        z-index: 1;
        animation: fadeInUp 0.6s ease-out 0.2s both;
      }
      
      /* Left Side - Illustration */
      .illustration-side {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 500px;
      }
      
      .illustration-wrapper {
        position: relative;
        width: 100%;
        max-width: 450px;
      }
      
      /* Main Illustration - Shopping Bag Character */
      .main-character {
        position: relative;
        width: 280px;
        height: 320px;
        margin: 0 auto;
        animation: float 4s ease-in-out infinite;
      }
      
      .shopping-bag {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 200px;
        height: 240px;
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border-radius: 20px 20px 60px 60px;
        box-shadow: 0 20px 40px rgba(40, 167, 69, 0.3);
      }
      
      .bag-handle {
        position: absolute;
        top: -40px;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 60px;
        border: 12px solid #28a745;
        border-bottom: none;
        border-radius: 50px 50px 0 0;
      }
      
      .bag-face {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 160px;
        height: 160px;
      }
      
      .eye {
        position: absolute;
        width: 50px;
        height: 50px;
        background: white;
        border-radius: 50%;
        top: 20%;
      }
      
      .eye-left { left: 15%; }
      .eye-right { right: 15%; }
      
      .eye::after {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        background: #2c3e50;
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }
      
      .mouth {
        position: absolute;
        bottom: 25%;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 30px;
        border: 6px solid white;
        border-top: none;
        border-radius: 0 0 40px 40px;
      }
      
      .sparkle {
        position: absolute;
        color: #ffc107;
        font-size: 1.5rem;
        animation: bounce 2s ease-in-out infinite;
      }
      
      .sparkle-1 {
        top: 10%;
        left: -10%;
        animation-delay: 0s;
      }
      
      .sparkle-2 {
        top: 15%;
        right: -5%;
        animation-delay: 0.5s;
        font-size: 2rem;
      }
      
      .sparkle-3 {
        bottom: 20%;
        left: -5%;
        animation-delay: 1s;
        font-size: 1.2rem;
      }
      
      /* Floating Items */
      .floating-item {
        position: absolute;
        font-size: 3rem;
        animation: float 5s ease-in-out infinite;
      }
      
      .item-1 {
        top: 5%;
        left: 10%;
        color: #dc3545;
        animation-delay: 0s;
      }
      
      .item-2 {
        top: 15%;
        right: 5%;
        color: #28a745;
        animation-delay: 1s;
      }
      
      .item-3 {
        bottom: 10%;
        left: 5%;
        color: #ffc107;
        animation-delay: 2s;
      }
      
      .item-4 {
        bottom: 20%;
        right: 10%;
        color: #17a2b8;
        animation-delay: 1.5s;
      }
      
      /* Store Illustration */
      .store-building {
        position: absolute;
        bottom: -50px;
        right: -30px;
        width: 180px;
        height: 140px;
        background: white;
        border-radius: 12px 12px 0 0;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        animation: float 6s ease-in-out infinite;
        animation-delay: 0.5s;
      }
      
      .awning {
        position: absolute;
        top: -15px;
        left: -10px;
        right: -10px;
        height: 25px;
        background: repeating-linear-gradient(
          90deg,
          #28a745 0px,
          #28a745 15px,
          white 15px,
          white 30px
        );
        border-radius: 8px 8px 0 0;
      }
      
      .door {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 50px;
        height: 70px;
        background: #17a2b8;
        border-radius: 8px 8px 0 0;
      }
      
      .window {
        position: absolute;
        width: 35px;
        height: 35px;
        background: #b3e5fc;
        border: 3px solid #0288d1;
        border-radius: 4px;
      }
      
      .window-left {
        top: 35px;
        left: 20px;
      }
      
      .window-right {
        top: 35px;
        right: 20px;
      }
      
      /* Parachute Delivery */
      .delivery-box {
        position: absolute;
        top: 50px;
        left: -50px;
        width: 60px;
        height: 60px;
        background: #ffc107;
        border: 3px solid #ff9800;
        border-radius: 8px;
        animation: float 4s ease-in-out infinite;
        animation-delay: 1s;
      }
      
      .parachute {
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 40px;
        background: #28a745;
        border-radius: 50% 50% 0 0;
        margin-bottom: 20px;
      }
      
      .parachute::before,
      .parachute::after {
        content: '';
        position: absolute;
        top: 100%;
        width: 2px;
        height: 25px;
        background: #666;
      }
      
      .parachute::before {
        left: 20%;
      }
      
      .parachute::after {
        right: 20%;
      }
      
      /* Right Side - Login Form */
      .login-card {
        background: white;
        border-radius: 16px;
        padding: 3rem 2.5rem;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
        max-width: 480px;
      }
      
      .login-header {
        margin-bottom: 2rem;
      }
      
      .login-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
      }
      
      .login-subtitle {
        color: #6c757d;
        font-size: 1rem;
      }
      
      .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
      }
      
      .form-label i {
        color: #28a745;
        font-size: 1.1rem;
      }
      
      .form-control {
        border-radius: 12px;
        border: 2px solid #e8e8e8;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.2s ease;
      }
      
      .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 4px rgba(40, 167, 69, 0.1);
        outline: none;
      }
      
      .form-control:hover {
        border-color: #d1d5db;
      }
      
      .btn-login {
        width: 100%;
        padding: 14px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        background: #28a745;
        color: white;
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
      }
      
      .btn-login:hover {
        background: #218838;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(40, 167, 69, 0.4);
      }
      
      .btn-login:active {
        transform: translateY(0);
      }
      
      .alert {
        border-radius: 12px;
        border: none;
        padding: 16px;
        margin-bottom: 24px;
        animation: shake 0.5s ease;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      
      .alert-danger {
        background: #fff5f5;
        color: #dc3545;
        border-left: 4px solid #dc3545;
      }
      
      .alert i {
        font-size: 1.2rem;
        flex-shrink: 0;
      }
      
      .form-group {
        margin-bottom: 24px;
      }
      
      .form-group:last-of-type {
        margin-bottom: 32px;
      }
      
      /* Responsive */
      @media (max-width: 992px) {
        .login-wrapper {
          grid-template-columns: 1fr;
          gap: 2rem;
        }
        
        .illustration-side {
          min-height: 400px;
          order: 2;
        }
        
        .login-card {
          order: 1;
          max-width: 100%;
        }
        
        .main-character {
          width: 220px;
          height: 260px;
        }
        
        .shopping-bag {
          width: 160px;
          height: 200px;
        }
        
        .store-building {
          width: 140px;
          height: 110px;
        }
        
        .floating-item {
          font-size: 2rem;
        }
      }
      
      @media (max-width: 576px) {
        body {
          padding: 1rem;
        }
        
        .logo-text {
          font-size: 2rem;
        }
        
        .login-card {
          padding: 2rem 1.5rem;
        }
        
        .login-title {
          font-size: 1.5rem;
        }
        
        .illustration-side {
          min-height: 300px;
        }
        
        .main-character {
          width: 180px;
          height: 220px;
        }
        
        .shopping-bag {
          width: 140px;
          height: 170px;
        }
        
        .store-building {
          display: none;
        }
        
        .delivery-box {
          display: none;
        }
      }
  
  body
    //- Background Shapes
    .bg-shape.bg-shape-1
    .bg-shape.bg-shape-2
    .bg-shape.bg-shape-3
    
    //- Main Container
    div(style='width: 100%; max-width: 1200px;')
      //- Logo
      .logo-container
        .logo-text <span>FreshMart</span>
      
      //- Login Wrapper (Illustration + Form)
      .login-wrapper
        //- Left Side - Illustration
        .illustration-side
          .illustration-wrapper
            //- Main Character - Shopping Bag
            .main-character
              .shopping-bag
                .bag-handle
                .bag-face
                  .eye.eye-left
                  .eye.eye-right
                  .mouth
              .sparkle.sparkle-1 ✨
              .sparkle.sparkle-2 ✨
              .sparkle.sparkle-3 ✨
            
            //- Floating Food Items
            i.bi.bi-egg-fried.floating-item.item-1
            i.bi.bi-cup-hot.floating-item.item-2
            i.bi.bi-basket.floating-item.item-3
            i.bi.bi-cart.floating-item.item-4
            
            //- Store Building
            .store-building
              .awning
              .door
              .window.window-left
              .window.window-right
            
            //- Delivery Box with Parachute
            .delivery-box
              .parachute
        
        //- Right Side - Login Form
        .login-card
          .login-header
            .login-title Masuk ke MBG Market
            .login-subtitle Kelola toko dan belanja bahan makanan
          
          if error && error.length
            each e in error
              .alert.alert-danger
                i.bi.bi-exclamation-circle
                span= e
          
          form(method='post' action='/login')
            .form-group
              label.form-label(for='email')
                i.bi.bi-envelope
                | Email
              input.form-control(
                type='email' 
                name='email' 
                id='email' 
                placeholder='nama@email.com' 
                required 
                value=(typeof form !== 'undefined' ? form.email : '')
              )
            
            .form-group
              label.form-label(for='password')
                i.bi.bi-lock
                | Password
              input.form-control(
                type='password' 
                name='password' 
                id='password' 
                placeholder='Masukkan password' 
                required
              )
            
            button.btn-login(type='submit')
              i.bi.bi-box-arrow-in-right
              | Login
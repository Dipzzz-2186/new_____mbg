doctype html
html(lang='id')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Login - MBG Marketplace
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css')
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      @keyframes float {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(5deg); }
      }
      
      @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-10px); }
        75% { transform: translateX(10px); }
      }
      
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        background: linear-gradient(135deg, #28a745 0%, #218838 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        position: relative;
        overflow: hidden;
      }
      
      /* Background Decorations */
      body::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 500px;
        height: 500px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        animation: float 8s ease-in-out infinite;
      }
      
      body::after {
        content: '';
        position: absolute;
        bottom: -30%;
        left: -10%;
        width: 400px;
        height: 400px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        animation: float 10s ease-in-out infinite reverse;
      }
      
      .login-container {
        width: 100%;
        max-width: 460px;
        animation: fadeInUp 0.6s ease-out;
        position: relative;
        z-index: 1;
      }
      
      .login-card {
        border-radius: 24px;
        border: none;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
        background: #ffffff;
        overflow: hidden;
      }
      
      .login-header {
        background: linear-gradient(135deg, #28a745 0%, #218838 100%);
        padding: 3rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
      }
      
      .login-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
      }
      
      .login-icon {
        width: 64px;
        height: 64px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 1rem;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        position: relative;
        z-index: 1;
      }
      
      .login-icon i {
        color: white;
      }
      
      .login-header h3 {
        color: white;
        font-weight: 700;
        font-size: 1.75rem;
        margin: 0;
        position: relative;
        z-index: 1;
      }
      
      .login-body {
        padding: 2.5rem;
      }
      
      .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
      }
      
      .form-label i {
        color: #28a745;
        font-size: 1.1rem;
      }
      
      .form-control {
        border-radius: 12px;
        border: 2px solid #e8e8e8;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.2s ease;
      }
      
      .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 4px rgba(40, 167, 69, 0.1);
        outline: none;
      }
      
      .form-control:hover {
        border-color: #d1d5db;
      }
      
      .btn-login {
        width: 100%;
        padding: 14px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        background: #28a745;
        color: white;
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
      }
      
      .btn-login:hover {
        background: #218838;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(40, 167, 69, 0.4);
      }
      
      .btn-login:active {
        transform: translateY(0);
      }
      
      .alert {
        border-radius: 12px;
        border: none;
        padding: 16px;
        margin-bottom: 24px;
        animation: shake 0.5s ease;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      
      .alert-danger {
        background: #fff5f5;
        color: #dc3545;
        border-left: 4px solid #dc3545;
      }
      
      .alert i {
        font-size: 1.2rem;
        flex-shrink: 0;
      }
      
      .form-group {
        margin-bottom: 24px;
      }
      
      .form-group:last-of-type {
        margin-bottom: 32px;
      }
      
      /* Additional Info */
      .login-footer {
        text-align: center;
        padding: 1.5rem 2.5rem 2.5rem;
        color: #6c757d;
        font-size: 0.875rem;
      }
      
      @media (max-width: 576px) {
        .login-header {
          padding: 2.5rem 1.5rem;
        }
        
        .login-body {
          padding: 2rem 1.5rem;
        }
        
        .login-header h3 {
          font-size: 1.5rem;
        }
        
        .login-icon {
          width: 56px;
          height: 56px;
          font-size: 1.75rem;
        }
        
        body::before,
        body::after {
          width: 300px;
          height: 300px;
        }
      }
  
  body
    .login-container
      .login-card
        .login-header
          .login-icon
            i.bi.bi-box-arrow-in-right
          h3 Welcome Back
          
        .login-body
          if error && error.length
            each e in error
              .alert.alert-danger
                i.bi.bi-exclamation-circle
                span= e
          
          form(method='post' action='/login')
            .form-group
              label.form-label(for='email')
                i.bi.bi-envelope
                | Email
              input.form-control(
                type='email' 
                name='email' 
                id='email' 
                placeholder='nama@email.com' 
                required 
                value=(typeof form !== 'undefined' ? form.email : '')
              )
            
            .form-group
              label.form-label(for='password')
                i.bi.bi-lock
                | Password
              input.form-control(
                type='password' 
                name='password' 
                id='password' 
                placeholder='Masukkan password' 
                required
              )
            
            button.btn-login(type='submit')
              i.bi.bi-box-arrow-in-right
              | Login
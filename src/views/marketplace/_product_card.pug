- var product = (typeof product !== 'undefined') ? product : ((typeof p !== 'undefined') ? p : {});
- var productDetailUrl = `/market/product/${(product && product.id) || ''}`;
- var isVendorDashboard = (typeof fromVendorDashboard !== 'undefined') ? !!fromVendorDashboard : false;

style.
  .product-card-wrapper {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.3s ease;
  }
  .product-card-wrapper:hover {
    transform: translateY(-4px);
  }

  .product-card {
    border: 1px solid #e8e8e8 !important;
    border-radius: 16px !important;
    overflow: hidden;
    background: white;
    transition: all 0.3s ease;
  }

  .product-card-wrapper:hover .product-card {
    border-color: #28a745 !important;
    box-shadow: 0 8px 24px rgba(40, 167, 69, 0.15);
  }

  .card-image-wrap {
    position: relative;
    overflow: hidden;
    background: #fafafa;
    height: 220px;
  }

  .card-image-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .product-card-wrapper:hover .card-image-wrap img {
    transform: scale(1.05);
  }

  .stock-badge {
    position: absolute;
    bottom: 12px;
    left: 12px;
    background: rgba(255, 255, 255, 0.95);
    padding: 6px 12px;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .category-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: rgba(255,255,255,0.95);
    padding: 4px 10px;
    font-size: 0.7rem;
    border-radius: 6px;
  }

  .product-name-text {
    font-size: .95rem;
    font-weight: 500;
    color: #2c3e50;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .btn-edit-vendor,
  .btn-delete-vendor {
    width: 100%;
    padding: 8px 14px;
    border-radius: 8px;
    font-size: .875rem;
    font-weight: 600;
    margin-top: 6px;
  }
  .btn-edit-vendor {
    background: #0d6efd;
    color: white;
  }
  .btn-delete-vendor {
    background: #dc3545;
    color: white;
  }

a.product-card-wrapper(href=productDetailUrl)
  .product-card

    .card-image-wrap
      if product && product.image
        img(src=product.image alt=product.name loading="lazy")
      else
        .image-placeholder
          i.bi.bi-image.placeholder-icon

      if product && product.stock > 0
        .stock-badge.available
          i.bi.bi-check-circle-fill
          | Tersedia
      else
        .stock-badge.unavailable
          i.bi.bi-x-circle-fill
          | Habis

      if product && product.category
        .category-badge= product.category

    .card-body
      .product-name
        .product-name-text= product.name || 'Produk'

      .price-section
        .current-price Rp #{Number(product.price || 0).toLocaleString('id-ID')}

      .product-meta
        i.bi.bi-star-fill.rating-star
        span 4.9 |
        span #{Number(product.stock || 0)} stok

    .card-footer
      // HANYA MUNCUL DI DASHBOARD VENDOR
      if currentUser && currentUser.role === 'vendor' && isVendorDashboard
        a.btn-edit-vendor(
          href=`/vendor/products/${product.id}/edit`
          onclick="event.stopPropagation()"
        )
          i.bi.bi-pencil-square
          |  Edit
        form(
          method='POST',
          action=`/vendor/products/${product.id}/delete`,
          onsubmit="event.stopPropagation()"
        )
          button.btn-delete-vendor(type='submit')
            i.bi.bi-trash
            |  Hapus

      else if currentUser && currentUser.role === 'dapur'
        a.btn-view-detail(href=productDetailUrl onclick="event.stopPropagation()")
          i.bi.bi-eye
          |  Detail

      else
        a.btn-view-detail(href=productDetailUrl onclick="event.stopPropagation()")
          | Lihat Detail

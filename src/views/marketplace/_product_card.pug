//- src/views/marketplace/_product_card.pug

- var product = (typeof product !== 'undefined') ? product : ((typeof p !== 'undefined') ? p : {});
- var productDetailUrl = `/market/product/${(product && product.id) || ''}`;
- var isVendorDashboard = (typeof fromVendorDashboard !== 'undefined') ? !!fromVendorDashboard : false;

style.
  .product-card-wrapper {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.3s ease;
  }
  .product-card-wrapper:hover {
    transform: translateY(-4px);
  }

  .product-card {
    border: 1px solid #e8e8e8 !important;
    border-radius: 16px !important;
    overflow: hidden;
    background: white;
    transition: all 0.3s ease;
  }

  .product-card-wrapper:hover .product-card {
    border-color: #28a745 !important;
    box-shadow: 0 8px 24px rgba(40, 167, 69, 0.15);
  }

  .card-image-wrap {
    position: relative;
    overflow: hidden;
    background: #fafafa;
    height: 220px;
  }

  .card-image-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .product-card-wrapper:hover .card-image-wrap img {
    transform: scale(1.05);
  }

  .stock-badge {
    position: absolute;
    bottom: 12px;
    left: 12px;
    background: rgba(255, 255, 255, 0.95);
    padding: 6px 12px;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .stock-badge.available { color: #28a745; }
  .stock-badge.unavailable { color: #dc3545; }

  .category-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: rgba(255,255,255,0.95);
    padding: 4px 10px;
    font-size: 0.7rem;
    border-radius: 6px;
  }

  .product-name-text {
    font-size: .95rem;
    font-weight: 500;
    color: #2c3e50;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* tombol vendor dashboard */
  .btn-edit-vendor,
  .btn-delete-vendor {
    width: 100%;
    padding: 8px 14px;
    border-radius: 8px;
    font-size: .875rem;
    font-weight: 600;
    margin-top: 6px;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }
  .btn-edit-vendor {
    background: #0d6efd;
    color: white;
    text-decoration: none;
  }
  .btn-edit-vendor:hover { background: #0b5ed7; }

  .btn-delete-vendor {
    background: #dc3545;
    color: white;
  }
  .btn-delete-vendor:hover { background: #bb2d3b; }

  /* tombol untuk dapur & non-dapur */
  .btn-view-detail,
  .btn-complete-profile,
  .btn-add-cart {
    width: 100%;
    padding: 8px 14px;
    border-radius: 8px;
    font-size: .875rem;
    font-weight: 600;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    text-decoration: none;
  }

  .btn-view-detail {
    background: #ffffff;
    border: 2px solid #28a745;
    color: #28a745;
  }
  .btn-view-detail:hover {
    background: #f0f9f3;
    color: #218838;
    border-color: #218838;
  }

  .btn-complete-profile {
    background: #ffc107;
    color: #2c3e50;
  }
  .btn-complete-profile:hover {
    background: #ffb300;
  }

  .btn-add-cart {
    background: #28a745;
    color: #ffffff;
  }
  .btn-add-cart:hover:not(:disabled) {
    background: #218838;
  }
  .btn-add-cart:disabled {
    background: #9e9e9e;
    cursor: not-allowed;
  }

  .add-to-cart-form {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .qty-control {
    display: flex;
    align-items: center;
    border: 2px solid #e8e8e8;
    border-radius: 8px;
    overflow: hidden;
    background: white;
  }
  .qty-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    border: none;
    color: #28a745;
    font-size: 0.9rem;
    cursor: pointer;
  }
  .qty-input {
    width: 45px;
    height: 32px;
    border: 0;
    border-left: 1px solid #e8e8e8;
    border-right: 1px solid #e8e8e8;
    text-align: center;
    font-weight: 600;
    font-size: 0.875rem;
    background: white;
  }

    /* ============================
     RAPIHIN TOMBOL DI CARD FOOTER
     ============================ */
  .card-footer {
    padding: 14px;
    display: flex;
    flex-direction: column;   /* tombol disusun vertikal */
    gap: 10px;                /* jarak antar tombol */
  }

  /* Samakan ukuran semua tombol */
  .btn-edit-vendor,
  .btn-delete-vendor,
  .btn-view-detail,
  .btn-complete-profile,
  .btn-add-cart {
    padding: 10px 14px;
    border-radius: 10px;
    font-size: .9rem;
    font-weight: 600;
    gap: 8px;
    transition: all .25s ease;
  }

  /* Hover efek smooth */
  .btn-edit-vendor:hover,
  .btn-delete-vendor:hover,
  .btn-view-detail:hover,
  .btn-complete-profile:hover,
  .btn-add-cart:hover:not(:disabled) {
    transform: translateY(-2px);
  }

  /* Form add cart biar tidak melebar dan rapi */
  .add-to-cart-form {
    display: flex;
    flex-direction: column;
    gap: 10px;
    width: 100%;
  }

  /* Qty biar sedikit lebih besar & rapi */
  .qty-control {
    height: 36px;
  }
  .qty-btn {
    width: 36px;
    height: 36px;
  }
  .qty-input {
    height: 36px;
    width: 50px;
    font-size: .9rem;
  }



//- ============== WRAPPER BERBEDA ==============
if isVendorDashboard
  //- DI DASHBOARD VENDOR: BUKAN <a>, cukup div supaya tombol bisa diklik bebas
  .product-card-wrapper
    .product-card
      //- IMAGE
      .card-image-wrap
        if product && product.image
          img(src=product.image alt=(product.name || 'Produk') loading="lazy")
        else
          .image-placeholder
            i.bi.bi-image.placeholder-icon

        if product && product.stock > 0
          .stock-badge.available
            i.bi.bi-check-circle-fill
            |  Tersedia
        else
          .stock-badge.unavailable
            i.bi.bi-x-circle-fill
            |  Habis

        if product && product.category
          .category-badge= product.category

      //- BODY
      .card-body
        .product-name
          .product-name-text= product.name || 'Produk'

        .price-section
          .current-price Rp #{Number(product.price || 0).toLocaleString('id-ID')}

        .product-meta
          i.bi.bi-star-fill.rating-star
          span 4.9 |
          span #{Number(product.stock || 0)} stok

      //- FOOTER: tombol edit & hapus vendor
      .card-footer
        if currentUser && currentUser.role === 'vendor'
          a.btn-edit-vendor(
            href=`/vendor/products/${product.id}/edit`
          )
            i.bi.bi-pencil-square
            |  Edit

          form(
            method='POST',
            action=`/vendor/products/${product.id}/delete`,
            onsubmit="return confirm('Yakin ingin menghapus produk ini?');"
          )
            if typeof csrfToken !== 'undefined'
              input(type="hidden" name="_csrf" value=csrfToken)
            button.btn-delete-vendor(type='submit')
              i.bi.bi-trash
              |  Hapus
        else
          a.btn-view-detail(href=productDetailUrl)
            i.bi.bi-eye
            |  Detail

else
  //- DI HALAMAN MARKETPLACE BIASA: kardi klik -> ke detail
  a.product-card-wrapper(href=productDetailUrl)
    .product-card
      .card-image-wrap
        if product && product.image
          img(src=product.image alt=(product.name || 'Produk') loading="lazy")
        else
          .image-placeholder
            i.bi.bi-image.placeholder-icon

        if product && product.stock > 0
          .stock-badge.available
            i.bi.bi-check-circle-fill
            |  Tersedia
        else
          .stock-badge.unavailable
            i.bi.bi-x-circle-fill
            |  Habis

        if product && product.category
          .category-badge= product.category

      .card-body
        .product-name
          .product-name-text= product.name || 'Produk'

        .price-section
          .current-price Rp #{Number(product.price || 0).toLocaleString('id-ID')}

        .product-meta
          i.bi.bi-star-fill.rating-star
          span 4.9 |
          span #{Number(product.stock || 0)} stok

      .card-footer
        if currentUser.role === 'dapur'
          if !(currentUser.phone && currentUser.address)
              a.btn-complete-profile(
                href="/dapur/profile/complete"
                onclick="event.stopPropagation()"
                title="Lengkapi data dapur"
              )
                i.bi.bi-exclamation-circle
                |  Lengkapi Data Dapur
          else
            form.add-to-cart-form(
              action="/dapur/cart/add"
              method="post"
              onclick="event.stopPropagation()"
            )
              input(type="hidden" name="product_id" value=(product && product.id))
              if typeof csrfToken !== 'undefined'
                input(type="hidden" name="_csrf" value=csrfToken)

              .qty-control
                button.qty-btn(
                  type="button"
                  onclick="event.stopPropagation(); let inp=this.parentElement.querySelector('input[name=qty]'); let v=parseInt(inp.value||'1',10); if(isNaN(v)||v<=1)v=1; else v--; inp.value=v;"
                )
                  i.bi.bi-dash
                input.qty-input(
                  type="number"
                  name="qty"
                  value="1"
                  min="1"
                  step="1"
                  readonly
                  onclick="event.stopPropagation()"
                )
                button.qty-btn(
                  type="button"
                  onclick="event.stopPropagation(); let inp=this.parentElement.querySelector('input[name=qty]'); let v=parseInt(inp.value||'1',10); if(isNaN(v)||v<1)v=1; else v++; inp.value=v;"
                )
                  i.bi.bi-plus

              button.btn-add-cart(
                type="submit"
                disabled=!((product && product.stock) && Number(product.stock) > 0)
              )
                i.bi.bi-cart-plus
                |  Keranjang
        else
          a.btn-view-detail(href=productDetailUrl)
            i.bi.bi-eye
            |  Detail
extends ../layout

block content
  style.
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to   { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes slideInRight {
      from { opacity: 0; transform: translateX(30px); }
      to   { opacity: 1; transform: translateX(0); }
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50%      { transform: translateY(-8px); }
    }
    
    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50%      { transform: scale(1.05); }
    }

    /* Global */
    * {
      box-sizing: border-box;
    }
    
    body {
      background: #fafafa;
    }

    /* Dashboard Header */
    .dashboard-header {
      background: #ffffff;
      padding: 24px 0;
      margin-bottom: 24px;
      border-bottom: 1px solid #e8e8e8;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .header-icon-box {
      width: 56px;
      height: 56px;
      background: #f0f9f3;
      border-radius: 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 26px;
      color: #28a745;
      border: 1px solid #e8e8e8;
      transition: all 0.4s ease;
      flex-shrink: 0;
    }
    
    .header-icon-box:hover {
      background: #28a745;
      color: white;
      transform: rotate(10deg) scale(1.1);
      border-color: #28a745;
    }
    
    .dashboard-title {
      font-size: 1.5rem;
      color: #2c3e50;
      font-weight: 700;
      margin-bottom: 4px;
      letter-spacing: -0.5px;
    }
    
    .dashboard-subtitle {
      color: #6c757d;
      font-size: 0.9rem;
      margin: 0;
    }

    /* Action Buttons */
    .action-buttons-wrapper {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
      justify-content: center;
      margin-top: 20px;
    }
    
    .btn-action-main {
      padding: 14px 24px;
      border-radius: 12px;
      font-weight: 600;
      font-size: 0.95rem;
      border: none;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      position: relative;
      overflow: hidden;
      flex: 1 1 auto;
      min-width: 200px;
      justify-content: center;
      text-decoration: none;
    }
    
    .btn-action-main:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }
    
    .btn-action-primary {
      background: #28a745;
      color: white;
    }
    
    .btn-action-primary:hover {
      background: #218838;
    }
    
    .btn-action-secondary {
      background: white;
      color: #28a745;
      border: 2px solid #28a745;
    }
    
    .btn-action-secondary:hover {
      background: #f8fdf9;
      color: #218838;
      border-color: #218838;
    }
    
    .badge-notification {
      background: #dc3545;
      color: white;
      padding: 3px 8px;
      border-radius: 12px;
      font-size: 0.8rem;
      font-weight: 700;
      animation: pulse 2s infinite;
      margin-left: 8px;
    }

    /* Section Card */
    .section-card {
      background: #ffffff;
      border: 1px solid #e8e8e8;
      border-radius: 14px;
      padding: 20px;
      margin-bottom: 24px;
      transition: all 0.3s ease;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .section-card:hover {
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
      border-color: #d0d0d0;
    }
    
    .section-header {
      display: flex;
      align-items: flex-start;
      gap: 12px;
      margin-bottom: 20px;
      padding-bottom: 16px;
      border-bottom: 2px solid #e8e8e8;
      position: relative;
      cursor: pointer;
      user-select: none;
      padding-right: 40px;
    }
    
    .section-header.collapsible-header {
      cursor: pointer;
      padding-right: 40px;
    }
    
    .section-header.non-collapsible {
      cursor: default;
      padding-right: 0;
    }
    
    .section-header::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 60px;
      height: 2px;
      background: #28a745;
    }
    
    .section-icon {
      width: 48px;
      height: 48px;
      background: #f0f9f3;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 22px;
      color: #28a745;
      flex-shrink: 0;
      border: 1px solid #e8e8e8;
      transition: all 0.3s ease;
    }
    
    .section-card:hover .section-icon {
      background: #28a745;
      color: white;
      transform: rotate(5deg) scale(1.05);
    }
    
    .section-title {
      color: #2c3e50;
      font-weight: 700;
      font-size: 1.15rem;
      margin: 0 0 4px 0;
      letter-spacing: -0.3px;
      line-height: 1.3;
    }
    
    .section-description {
      color: #6c757d;
      font-size: 0.85rem;
      margin: 0;
      line-height: 1.4;
    }

    /* Collapsible Sections */
    .collapsible-section .section-header {
      position: relative;
      padding-right: 40px;
    }
    
    .collapsible-section .section-toggle-icon {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      transition: transform 0.3s ease;
      font-size: 20px;
      color: #28a745;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
      background: #f8f9fa;
      flex-shrink: 0;
    }
    
    .collapsible-section .section-toggle-icon:hover {
      background: #e9ecef;
    }
    
    .collapsible-section .section-toggle-icon.collapsed {
      transform: translateY(-50%) rotate(-180deg);
    }
    
    .collapsible-section .section-content {
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    /* Desktop: semua section bisa di-toggle, default terbuka */
    @media (min-width: 768px) {
      .collapsible-section .section-content {
        max-height: 5000px;
        opacity: 1;
      }
      
      .collapsible-section .section-content.collapsed {
        max-height: 0;
        opacity: 0;
        margin-top: 0;
        padding-top: 0;
        overflow: hidden;
      }
    }
    
    /* Mobile: semua section tertutup otomatis */
    @media (max-width: 767.98px) {
      .collapsible-section .section-content {
        max-height: 0;
        opacity: 0;
        margin-top: 0;
        padding-top: 0;
        overflow: hidden;
      }
      
      .collapsible-section .section-content:not(.collapsed) {
        max-height: 5000px;
        opacity: 1;
        margin-top: 20px;
        padding-top: 0;
      }
      
      .collapsible-section .section-toggle-icon.collapsed {
        transform: translateY(-50%) rotate(0deg);
      }
      
      .collapsible-section .section-toggle-icon:not(.collapsed) {
        transform: translateY(-50%) rotate(-180deg);
      }
    }

    /* Non-collapsible product section */
    .non-collapsible-section .section-header {
      cursor: default;
      padding-right: 0;
    }
    
    .non-collapsible-section .section-content {
      display: block !important;
      max-height: none !important;
      opacity: 1 !important;
    }

    /* Stats Cards Grid */
    .stats-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
      margin-bottom: 24px;
    }
    
    @media (min-width: 768px) {
      .stats-grid {
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
      }
    }
    
    .stat-card {
      background: #ffffff;
      border-radius: 14px;
      padding: 18px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
      border: 1px solid #e8e8e8;
      animation: fadeInUp 0.6s ease-out;
    }
    
    @media (min-width: 768px) {
      .stat-card {
        padding: 20px;
      }
    }
    
    .stat-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 20px rgba(40, 167, 69, 0.1);
      border-color: #d4edda;
    }
    
    .stat-icon-wrapper {
      width: 48px;
      height: 48px;
      background: #f0f9f3;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      color: #28a745;
      margin-bottom: 15px;
      border: 1px solid #d4edda;
      transition: all 0.3s ease;
    }
    
    .stat-card:hover .stat-icon-wrapper {
      background: #28a745;
      color: white;
      transform: scale(1.05);
    }
    
    .stat-label {
      color: #6c757d;
      font-size: 0.8rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 8px;
      display: block;
    }
    
    .stat-value {
      font-size: 1.5rem;
      font-weight: 700;
      color: #2c3e50;
      line-height: 1;
      display: block;
      margin-bottom: 4px;
    }
    
    @media (min-width: 768px) {
      .stat-value {
        font-size: 2rem;
      }
    }
    
    .stat-description {
      color: #8a94a6;
      font-size: 0.75rem;
      margin-top: 5px;
      display: flex;
      align-items: center;
      gap: 4px;
    }

    /* Info Box */
    .info-box {
      background: #f8f9fa;
      border-left: 4px solid #6c757d;
      padding: 12px;
      border-radius: 8px;
      margin-bottom: 16px;
      transition: all 0.3s ease;
      font-size: 0.9rem;
    }
    
    .info-box:hover {
      background: #f0f0f0;
      padding-left: 16px;
    }
    
    .info-box-success {
      background: #f0f9f3;
      border-left-color: #28a745;
    }
    
    .info-box-warning {
      background: #fff9f0;
      border-left-color: #ffc107;
    }
    
    .info-box-info {
      background: #f0f4ff;
      border-left-color: #4361ee;
    }

    /* Form Elements */
    .form-group-custom {
      margin-bottom: 20px;
    }
    
    .label-wrapper {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 8px;
      gap: 8px;
    }
    
    .form-label-custom {
      font-weight: 600;
      color: #2c3e50;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 6px;
      margin: 0;
    }
    
    .form-label-custom i {
      color: #28a745;
      font-size: 16px;
    }
    
    .required-badge {
      background: #e8f5eb;
      color: #28a745;
      padding: 3px 8px;
      border-radius: 10px;
      font-size: 0.7rem;
      font-weight: 600;
      border: 1px solid #d4edda;
      white-space: nowrap;
    }
    
    .form-control-custom {
      border: 2px solid #e8e8e8;
      border-radius: 10px;
      padding: 12px 14px;
      width: 100%;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      background: #ffffff;
    }
    
    .form-control-custom:focus {
      border-color: #28a745;
      box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.1);
      outline: none;
      background: #fafafa;
    }
    
    .form-control-custom:hover {
      border-color: #c0c0c0;
    }
    
    .input-hint {
      font-size: 0.8rem;
      color: #6c757d;
      margin-top: 6px;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    /* Buttons */
    .btn-custom {
      padding: 12px 24px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 0.95rem;
      border: none;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      cursor: pointer;
      text-decoration: none;
    }
    
    .btn-custom:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.12);
    }
    
    .btn-primary-custom {
      background: #28a745;
      color: white;
    }
    
    .btn-primary-custom:hover {
      background: #218838;
    }

    /* Table Styles */
    .table-custom {
      width: 100%;
      background: white;
      border-radius: 12px;
      overflow: hidden;
    }
    
    .table-custom thead {
      background: #f8f9fa;
      border-bottom: 2px solid #28a745;
    }
    
    .table-custom thead th {
      padding: 14px 12px;
      font-size: 0.85rem;
      font-weight: 700;
      color: #495057;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border: none;
    }
    
    .table-custom tbody td {
      padding: 16px 12px;
      border: none;
      border-bottom: 1px solid #f0f0f0;
      vertical-align: middle;
      font-size: 0.9rem;
    }
    
    .table-custom tbody tr {
      transition: all 0.3s ease;
    }
    
    .table-custom tbody tr:hover {
      background: #f8fdf9;
    }
    
    .user-avatar {
      width: 40px;
      height: 40px;
      background: #f0f9f3;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #28a745;
      font-size: 16px;
      border: 2px solid #e8e8e8;
      transition: all 0.3s ease;
      flex-shrink: 0;
    }
    
    .table-custom tbody tr:hover .user-avatar {
      background: #28a745;
      color: white;
      transform: rotate(5deg);
      border-color: #28a745;
    }

    /* Products Section - Non Collapsible */
    .products-section {
      background: #ffffff;
      border: 1px solid #e8e8e8;
      border-radius: 14px;
      padding: 20px;
      margin-bottom: 24px;
      animation: fadeInUp 0.6s ease-out;
      animation-delay: 0.3s;
    }
    
    .products-section:hover {
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
      border-color: #d0d0d0;
    }
    
    .products-header {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      gap: 12px;
      margin-bottom: 20px;
      padding-bottom: 16px;
      border-bottom: 2px solid #e8e8e8;
      position: relative;
    }
    
    .products-header::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 60px;
      height: 2px;
      background: #28a745;
    }
    
    .products-title-wrapper {
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .products-icon {
      width: 48px;
      height: 48px;
      background: #f0f9f3;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 22px;
      color: #28a745;
      flex-shrink: 0;
      border: 1px solid #e8e8e8;
      transition: all 0.3s ease;
    }
    
    .products-section:hover .products-icon {
      background: #28a745;
      color: white;
      transform: rotate(5deg) scale(1.05);
    }
    
    .products-title {
      color: #2c3e50;
      font-weight: 700;
      font-size: 1.15rem;
      margin: 0 0 4px 0;
      letter-spacing: -0.3px;
      line-height: 1.3;
    }
    
    .products-description {
      color: #6c757d;
      font-size: 0.85rem;
      margin: 0;
      line-height: 1.4;
    }

    /* Products Grid */
    .products-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 15px;
      margin-bottom: 0;
    }
    
    @media (min-width: 576px) {
      .products-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (min-width: 768px) {
      .products-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
      }
    }
    
    @media (min-width: 992px) {
      .products-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }
    
    @media (min-width: 1200px) {
      .products-grid {
        grid-template-columns: repeat(4, 1fr);
      }
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 40px 20px;
    }
    
    .empty-icon {
      font-size: 60px;
      color: #e8e8e8;
      margin-bottom: 12px;
      animation: float 3s ease-in-out infinite;
    }
    
    .empty-text {
      color: #6c757d;
      font-size: 0.95rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .dashboard-header {
        padding: 16px 0;
        margin-bottom: 16px;
      }
      
      .action-buttons-wrapper {
        flex-direction: column;
        gap: 10px;
        margin-top: 16px;
      }
      
      .btn-action-main {
        width: 100%;
        min-width: unset;
        padding: 12px 20px;
        font-size: 0.9rem;
      }
      
      .section-card {
        padding: 16px;
        margin-bottom: 16px;
      }
      
      .section-header {
        padding-right: 36px;
        gap: 10px;
        margin-bottom: 16px;
        padding-bottom: 12px;
      }
      
      .section-header.non-collapsible {
        padding-right: 0;
      }
      
      .section-icon {
        width: 42px;
        height: 42px;
        font-size: 20px;
      }
      
      .section-title {
        font-size: 1rem;
      }
      
      .section-description {
        font-size: 0.8rem;
      }
      
      .products-section {
        padding: 16px;
      }
      
      .products-header {
        margin-bottom: 16px;
        padding-bottom: 12px;
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
      }
      
      .products-title-wrapper {
        gap: 10px;
      }
      
      .products-icon {
        width: 42px;
        height: 42px;
        font-size: 20px;
      }
      
      .form-group-custom {
        margin-bottom: 16px;
      }
      
      .form-control-custom {
        padding: 11px 12px;
        font-size: 0.9rem;
      }
      
      .stats-grid {
        gap: 12px;
      }
      
      .stat-card {
        padding: 16px;
      }
      
      .stat-icon-wrapper {
        width: 42px;
        height: 42px;
        font-size: 18px;
        margin-bottom: 12px;
      }
      
      .stat-value {
        font-size: 1.3rem;
      }
    }

  //- Header Section
  .dashboard-header.animate-fade-up
    .container-fluid
      .text-center
        .d-inline-flex.align-items-center.justify-content-center.mb-3
          .header-icon-box.me-2
            i.bi.bi-shop
          div.text-start
            .dashboard-title Dashboard Vendor
            .dashboard-subtitle
              i.bi.bi-box-seam.me-1
              | Kelola produk dan tim pengiriman Anda
        
        .action-buttons-wrapper
          a.btn-action-main.btn-action-primary(href="/vendor/products/new" style='text-decoration: none;')
            i.bi.bi-plus-circle
            span Tambah Produk
          
          a.btn-action-main.btn-action-secondary(href="/vendor/orders" style='text-decoration: none;')
            i.bi.bi-cart
            span Pesanan
            if typeof pendingCount !== 'undefined' && pendingCount > 0
              span.badge-notification= pendingCount

  .container-fluid
    //- Statistics Section - Collapsible
    if products && products.length
      .section-card.animate-fade-up.collapsible-section(style='animation-delay: 0.1s;')
        .section-header.collapsible-header
          .section-icon
            i.bi.bi-graph-up
          div.flex-grow-1
            .section-title Statistik Inventori
            .section-description Ringkasan produk dan tim Anda
          i.bi.bi-chevron-down.section-toggle-icon

        .section-content
          .stats-grid
            .stat-card
              .stat-icon-wrapper
                i.bi.bi-box-seam
              .stat-label Total Produk
              .stat-value= products.length
              .stat-description
                i.bi.bi-check-circle.me-1
                = products.length === 1 ? 'produk terdaftar' : 'produk terdaftar'
            
            .stat-card
              .stat-icon-wrapper
                i.bi.bi-check-circle
              .stat-label Stok Tersedia
              - const totalStock = products.reduce((sum, p) => sum + (parseFloat(p.stock) || 0), 0)
              .stat-value= totalStock.toFixed(1)
              .stat-description
                i.bi.bi-info-circle.me-1
                | unit total
            
            .stat-card
              .stat-icon-wrapper
                i.bi.bi-currency-dollar
              .stat-label Nilai Inventori
              - const totalValue = products.reduce((sum, p) => sum + ((parseFloat(p.price) || 0) * (parseFloat(p.stock) || 0)), 0)
              .stat-value= 'Rp ' + totalValue.toLocaleString('id-ID')
              .stat-description
                i.bi.bi-calculator.me-1
                | nilai saat ini
            
            .stat-card
              .stat-icon-wrapper
                i.bi.bi-truck
              .stat-label Tim Supir
              - const driverCount = drivers ? drivers.length : 0
              .stat-value= driverCount
              .stat-description
                i.bi.bi-people.me-1
                = driverCount === 1 ? 'supir aktif' : 'supir aktif'

    .row
      //- Section: Tambah Supir Baru - Collapsible
      .col-lg-6.col-12.mb-4
        .section-card.animate-fade-up.collapsible-section(style='animation-delay: 0.2s;')
          .section-header.collapsible-header
            .section-icon
              i.bi.bi-person-plus
            div.flex-grow-1
              .section-title Tambah Supir Baru
              .section-description Daftarkan supir untuk mengelola pengiriman
            i.bi.bi-chevron-down.section-toggle-icon

          .section-content
            .info-box.info-box-success
              i.bi.bi-lightbulb-fill.me-2
              strong Tips: 
              | Supir akan dapat login dan melihat pesanan yang perlu dikirim

            form(action='/vendor/drivers' method='post')
              .form-group-custom
                .label-wrapper
                  label.form-label-custom
                    i.bi.bi-person
                    | Nama Supir
                  span.required-badge Wajib
                input.form-control-custom(type='text' name='name' required placeholder='Contoh: Budi Saputra')

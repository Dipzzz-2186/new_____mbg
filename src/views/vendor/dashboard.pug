  //- JavaScript for Collapsible Sections
  script.
    document.addEventListener('DOMContentLoaded', function() {
      function setupCollapsible() {
        const sections = document.querySelectorAll('.collapsible-section');
        const isMobile = window.innerWidth < 768;
        
        sections.forEach(function(section) {
          let header = section.querySelector('.section-header');
          let content = section.querySelector('.section-content');
          let icon   = section.querySelector('.section-toggle-icon');
          
          if (!header || !content || !icon) return;

          // Reset listener lama: clone header SELALU
          const newHeader = header.cloneNode(true);
          header.parentNode.replaceChild(newHeader, header);

          header  = newHeader;
          content = section.querySelector('.section-content');
          icon    = section.querySelector('.section-toggle-icon');

          // SET STATE AWAL BERDASARKAN DEVICE
          if (isMobile) {
            // Mobile: semua section tertutup
            content.classList.add('collapsed');
            icon.classList.add('collapsed');
          } else {
            // Desktop: semua section terbuka, tapi bisa ditoggle
            content.classList.remove('collapsed');
            icon.classList.remove('collapsed');
          }

          header.addEventListener('click', function(e) {
            const isFormElement =
              e.target.tagName === 'INPUT' ||
              e.target.tagName === 'SELECT' ||
              e.target.tagName === 'BUTTON' ||
              e.target.tagName === 'TEXTAREA' ||
              e.target.tagName === 'A';

            const isInsideForm    = e.target.closest('form');
            const isInsideButton  = e.target.closest('.btn-custom');
            const isInsideActionButton = e.target.closest('.btn-action-main');

            if (isFormElement || isInsideForm || isInsideButton || isInsideActionButton) {
              return;
            }

            content.classList.toggle('collapsed');
            icon.classList.toggle('collapsed');
          });
        });
      }

      // Initial setup
      setupCollapsible();

      // Re-setup on resize
      let resizeTimer;
      window.addEventListener('resize', function() {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(setupCollapsible, 250);
      });
    });